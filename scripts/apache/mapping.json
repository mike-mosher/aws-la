{
  "apache_access_logs" : {
    "mappings" : {
      "apache_access_logs" : {
        "properties":{
          "request":{
            "type":"keyword"
          },
          "agent":{
            "type":"keyword"
          },
          "auth":{
            "type":"keyword"
          },
          "ident":{
            "type":"keyword"
          },
          "verb":{
            "type":"keyword"
          },
          "x-forwarded-for-ip-address":{
            "type":"ip"
          },
          "referrer":{
            "type":"keyword"
          },
          "response":{
            "type":"integer"
          },
          "bytes":{
            "type":"integer"
          },
          "clientip":{
            "type":"ip"
          },
          "httpversion":{
            "type":"keyword"
          },
          "geoip"  : {
            "dynamic": true,
            "properties" : {
              "ip": { "type": "ip" },
              "location" : { "type" : "geo_point" },
              "latitude" : { "type" : "half_float" },
              "longitude" : { "type" : "half_float" }
            }
          }
        }
      }
    }
  }
}
