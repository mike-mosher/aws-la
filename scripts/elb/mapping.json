{
  "elb_logs" : {
    "mappings" : {
      "elb_logs" : {
        "properties":{
          "elb_node":{
            "type":"keyword"
          },
          "client_ip_adress":{
            "type":"ip"
          },
          "client_port":{
            "type":"integer"
          },
          "backend_ip_adress":{
            "type":"ip"
          },
          "backend_port":{
            "type":"integer"
          },
          "request_processing_time":{
            "type":"float"
          },
          "backend_processing_time":{
            "type":"float"
          },
          "response_processing_time":{
            "type":"float"
          },
          "elb_status_code":{
            "type":"integer"
          },
          "backend_status_code":{
            "type":"integer"
          },
          "received_bytes":{
            "type":"integer"
          },
          "sent_bytes":{
            "type":"integer"
          },
          "request":{
            "type":"keyword"
          },
          "agent":{
            "type":"keyword"
          },
          "ssl_cipher":{
            "type":"keyword"
          },
          "ssl_protocol":{
            "type":"keyword"
          },
          "request_verb":{
            "type":"keyword"
          },
          "request_url":{
            "type":"keyword"
          },
          "request_proto":{
            "type":"keyword"
          },
          "geoip"  : {
            "dynamic": true,
            "properties" : {
              "ip": { "type": "ip" },
              "location" : { "type" : "geo_point" },
              "latitude" : { "type" : "half_float" },
              "longitude" : { "type" : "half_float" }
            }
          }
        }
      }
    }
  }
}
