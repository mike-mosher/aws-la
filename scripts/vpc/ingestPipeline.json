{
  "description" : "Ingest pipeline for AWS VPC Flow Logs",
  "processors" : [
    {
      "grok": {
        "field": "message",
        "patterns":
          [
            "^%{TIMESTAMP_ISO8601:timestamp} %{NONNEGINT:version} %{DATA:account-id} %{DATA:interface-id} (?:-|%{IPV4:source_ip_address}) (?:-|%{IPV4:dest_ip_address}) (?:-|%{NUMBER:source_port}) (?:-|%{NUMBER:dest_port}) (?:-|%{NUMBER:protocol}) (?:-|%{NUMBER:packets}) (?:-|%{NUMBER:bytes}) %{NONNEGINT:start:int} %{NONNEGINT:end:int} %{DATA:action} %{DATA:log-status}$"
          ]
      }
    },
    {
      "script": {
        "inline": "ctx.duration = (ctx.end - ctx.start); ctx.start = ctx.start.toString(); ctx.end = ctx.end.toString();"
      }
    },
    {
      "date" : {
        "field" : "start",
        "target_field" : "start_time",
        "formats" : ["UNIX"]
      }
    },
    {
      "date" : {
        "field" : "end",
        "target_field" : "end_time",
        "formats" : ["UNIX"]
      }
    },
    {
      "geoip": {
        "field": "source_ip_address",
        "ignore_missing": true
      }
    },
    {
      "remove": {
        "field": "start"
      }
    },
    {
      "remove": {
        "field": "end"
      }
    }
  ]
}
